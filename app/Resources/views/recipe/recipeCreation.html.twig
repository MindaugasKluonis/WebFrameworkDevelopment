{% extends 'base.html.twig' %}

{% block pageTitle %}Create new recipe{% endblock %}

{% block body %}

    <h1>Create new recipe</h1>

    {% for flash_message in app.session.flashBag.get('error') %}
        <div class="flash-error">
            {{ flash_message }}
        </div>
    {% endfor %}

    <form action="/recipe/processNewRecipe" method="POST">
        Recipe title:
        <p>
            <input type="text" name="title">
        </p>

        <p>
            <textarea  rows="6" cols="50" name="summary">Enter summary here...</textarea>
        </p>

        <p>
            <textarea rows="6" cols="50" name="steps">Enter steps here...</textarea>
        </p>

        <p>
            <textarea rows="6" cols="50" name="ingredients">Enter ingredients here...</textarea>
        </p>

        Collection:

        <select name="collection">
            <option value="" selected></option>
            {% for collection in collections %}
                <option value="{{ collection.name }}">{{ collection.name }}</option>
            {% endfor %}
        </select>

        <p>
            <input type="submit" value="Create new recipe">
        </p>

        {{ dump() }}
    </form>


{% endblock %}