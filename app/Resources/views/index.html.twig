{% extends 'base.html.twig' %}

{% block pageTitle %}Home Page{% endblock %}

{% block body %}

    {% for flash_message in app.session.flashBag.get('error') %}
        <div class="flash-error">
            {{ flash_message }}
        </div>
    {% endfor %}

    <h1>Home Page</h1>

        {{ dump() }}
        <ul>
            {% for recipe in recipes %}
                <li>
                    id = {{ recipe.id }}
                    <br>
                    <a href="{{ path('showOneRecipePage' , {title:recipe.title})}}">
                        title: {{ recipe.title }}
                    </a>

                </li>
            {% endfor %}
        </ul>



{% endblock %}
